					<tools>
					  <li Class="CombatExtended.ToolCE">
						<label>claw</label>
						<capacities>
						  <li>Scratch</li>
						</capacities>
						<power>30</power>
						<cooldownTime>0.75</cooldownTime>
						<armorPenetrationSharp>40</armorPenetrationSharp>
						<armorPenetrationBlunt>30</armorPenetrationBlunt>
